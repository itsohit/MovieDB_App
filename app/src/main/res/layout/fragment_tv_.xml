<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="contacts.test.moviesdatabase.Tv_Fragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:tabBackground="@color/tabBackgroundcolor"
                app:tabMode="fixed"
                app:tabTextColor="@color/transparent_white"
                app:tabSelectedTextColor="@android:color/white"
                android:id="@+id/tablayout_tvfragment"></android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tablayout_tvfragment"
                android:id="@+id/viewPager_TvShows"
                android:layout_alignParentBottom="true"></android.support.v4.view.ViewPager>
        </RelativeLayout>

</FrameLayout>
