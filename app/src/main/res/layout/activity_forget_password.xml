<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="contacts.test.moviesdatabase.ForgetPassword">

   <android.support.v7.widget.Toolbar
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/background_color_light"
       app:title="Forget Password"
       app:titleTextColor="#ffffff"></android.support.v7.widget.Toolbar>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar_forget"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/movie_logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo_icon"
        android:layout_marginTop="@dimen/_80sdp"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/_26sdp"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="@dimen/_20sdp"
         android:textColor="#ffffff"
         android:textStyle="bold"
         android:id="@+id/text_forget"
         android:layout_marginBottom="@dimen/_10sdp"
         android:layout_below="@+id/logo_icon"
         android:text="@string/forget_pass"
         />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_forget"
        android:layout_margin="@dimen/_20sdp"
        android:hint="Enter Your Email"
        android:padding="@dimen/_10sdp"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:id="@+id/email_id_forget"
        android:textSize="@dimen/_16sdp"
        android:background="@drawable/forget_emailid"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="#ffffff"
        android:id="@+id/submit_forget_btn"
        android:layout_below="@+id/email_id_forget"
        android:textSize="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_4sdp"
        android:background="@drawable/login_button"
        android:textAllCaps="false"/>

</RelativeLayout>
